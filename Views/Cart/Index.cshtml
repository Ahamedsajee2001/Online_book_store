@model List<OnlineBookStore.Models.CartItem>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_AdminHomeLayout.cshtml";
}

<div class="container">
    <h2>Your Cart</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Quantity</td>
                    <td>@item.Book.Price</td>
                    <td>$@(item.Book.Price * item.Quantity)</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("Checkout","Order")" class="btn btn-primary">Proceed to Checkout</a>
</div>
